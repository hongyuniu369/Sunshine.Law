@{
    ViewBag.EasyuiVersion = "1.3.2";
    ViewBag.locale = "zh_CN";
    ViewBag.theme = "gray";
}
<!doctype html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/content/jwc/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <!--加载jQuery-->
    <script src="~/Content/js/jquery/jquery-1.8.1.min.js" type="text/javascript" ></script>
    <!--加载通用CSS-->
    <link href="~/content/jwc/css/reset.css" type="text/css" rel="stylesheet" />
    <link href="~/content/jwc/css/master.css" type="text/css" rel="stylesheet" />
    @RenderSection("head", required: false)
</head>
<body>
    <!--头部内容开始-->
    @Html.Partial("_PartialJwcHead")
    <!--头部内容结束-->
    <!--页面内容开始-->
    @RenderBody()
    <!--页面内容结束-->
    <!--尾部内容开始-->
    @Html.Partial("_PartialJwcFoot")
    <!--尾部内容结束-->
    <!--加载脚本库-->
    <script src="~/Content/js/core/json2.min.js" type="text/javascript" ></script>
    <script src="~/Content/js/core/utils.js" type="text/javascript" ></script>
    <script src="~/Content/js/core/common.js" type="text/javascript" ></script>
    <script src="~/Content/js/core/knockout-2.2.1.js" type="text/javascript" ></script>
    <script src="~/Content/js/core/knockout.mapping-2.4.1.js" type="text/javascript" ></script>
    <script src="~/Content/js/core/knockout.bindings.js" type="text/javascript" ></script>
    <script src="~/Content/js/jquery-plugin/showloading/jquery.showLoading.min.js" type="text/javascript" ></script>
    <script src="~/Content/js/core/jquery.easyui.fix.js" type="text/javascript" ></script>

    <!--加载easyui加载器-->
    <script type="text/javascript" src="~/Content/js/jquery-easyui-@ViewBag.EasyuiVersion/easyloader.js?locale=@ViewBag.locale&theme=@ViewBag.theme"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
