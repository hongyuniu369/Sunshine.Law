@{
    Layout = "~/Views/Shared/_LayoutH5.cshtml";
    ViewBag.Title = "找律师-阳光问法-河北新闻网";
    ViewBag.EasyuiVersion = "1.3.2";
    ViewBag.locale = "zh_CN";
    ViewBag.theme = "gray";
    ViewBag.Keywords = "阳光问法,河北法律,河北法律平台";
}
@section head{
    <script src="~/Content/js/jquery/jquery-1.8.1.min.js" type="text/javascript"></script>
    <!--加载脚本库-->
    @Scripts.Render("~/Content/js/library")
    <!--加载easyui加载器-->
    <script type="text/javascript" src="~/Content/js/jquery-easyui-@ViewBag.EasyuiVersion/easyloader.js?locale=@ViewBag.locale&theme=@ViewBag.theme"></script>
    <script type="text/javascript">var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));</script>
}


@section scripts{
    <script src="/Content/js/viewModel/com.viewModel.list.js"></script>
    <script type="text/javascript">
        var viewModel = function(){
            var self = this;
            com.viewModel.list.apply(this,arguments);
        }
        $(document).ready(function () {
            var easyLoaded = function(){
                //绑定地址
                var view = new viewModel(data);
                ko.applyBindings(view, document.getElementById('zxcon'));
                $('#pp').pagination({
                    showPageList:false,
                    showRefresh:false,
                    displayMsg:""
                });
            };
            //数据绑定
            using(['pagination','combobox'], easyLoaded);
        })
    </script>
}

<div data-am-widget="list_news" class="am-list-news am-list-news-default am-no-layout">
    <!--列表标题-->
    <div class="am-list-news-hd list-news-hd am-cf">
        <h2>律师团队</h2>
    </div>
    <div class="am-list-news-bd">
        <ul class="am-comments-list" data-bind="foreach: items">
            <li class="am-comment">
                <a data-bind="attr: {'href':'/h5/lawyerdetail/' + LawyerCode() },title:LawyerName">
                    <img width="48" height="48" class="am-comment-avatar" alt="" data-bind="attr: {'src':LawyerPic}">
                </a>
                <div class="am-comment-main">
                    <header class="am-comment-hd">
                        <div class="am-comment-meta"><a class="am-comment-author" data-bind="attr: {'href':'/h5/lawyerdetail/' + LawyerCode() },html:LawyerName" href="#"></a><time data-bind="html:ProfessionalTitle"></time></div>
                        <div class="am-comment-actions"><a data-bind="attr: {'href':'/h5/wyzx/' + LawyerCode() },title:'我也要咨询'+LawyerName+'律师'" href="#"><i class="am-icon-commenting"></i></a></div>
                    </header>
                    <div class="am-comment-bd">
                        <p class="desc" data-bind="html:(LawyerDescription().replace(/<[^>]+>/g,'').substring(0,80)+'...<a href=\'/h5/lawyerdetail/' + LawyerCode() + '\' target=\'_blank\'>[详细]</a>')">...<a href="#" data-bind="attr: {'href':'/lawyer-' + LawyerCode() }">[详细]</a></p>
                    </div>
                    <footer class="am-comment-footer">
                        <div class="am-comment-actions"><a data-bind="attr: {'href':'/h5/wyzx/' + LawyerCode() },title:'我也要咨询'+LawyerName+'律师'" href="#"><i class="am-icon-commenting"></i></a></div>
                    </footer>
                </div>
            </li>
        </ul>
        <ul class="am-pagination blog-pagination">
            <li class="am-pagination-next">
                <div id="pp"></div>
            </li>
        </ul>
    </div>
</div>
