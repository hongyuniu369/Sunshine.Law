@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
    <script src="~/Content/js/jquery-plugin/ckfinder/ckfinder.js"></script>
    <style type="text/css">
        div#navigation{background:white}
        div#wrapper{float:right;width:100%;margin-left:-185px}
        div#content{margin-left:185px}
        div#navigation{float:left;width:180px}
        .datagrid-cell a{color:black;}
        .datagrid-cell a:hover{color:red;}
    </style>
}

@section scripts{
    <script src="~/Areas/CMS/ViewModels/link.js"></script>
    <script type="text/javascript">
        using(['validatebox','combotree','numberbox','lookup'],easyuifix.datagrid_editor_extend);
        var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        ko.bindingViewModel(new viewModel());
        var formatterButton = function (value, row) {
            var dataStr = JSON.stringify({UserCode:row.UserCode,UserName:row.UserName,_isnew:row._isnew});
            var html = '<a href="#" onclick=\'setOrganize(' + dataStr + ')\'><span class="icon icon-org">&nbsp;</span>[设置机构]</a>';
            html += '<a href="#" onclick=\'setRole(' + dataStr + ')\' style="margin-left:10px"><span class="icon icon-group">&nbsp;</span>[设置角色]</a>';
            return html;
        };
        var formatterEnable = function (value,row) {return '<img src="/Content/images/' + ((value||'').toString()=="true" ? "checkmark.gif" : "checknomark.gif") + '"/>';};
        var formatterParent = function (value,row) {return row.ParentLinkName;};
    </script>
}
<div id="container">
    <div id="wrapper">
        <div id="content">
            <div class="z-toolbar">
                <a id="a_refresh" href="#" plain="true" class="easyui-linkbutton" icon="icon-arrow_refresh" title="刷新" data-bind="click:refreshClick">刷新</a>
                <a id="a_add"    href="#" plain="true" class="easyui-linkbutton" icon="icon-add" title="新增" data-bind="click:addClick">新增</a>
                <a id="a_edit"   href="#" plain="true" class="easyui-linkbutton" icon="icon-edit" data-bind="click:editClick" title="编辑">编辑</a>
                <a id="a_del"    href="#" plain="true" class="easyui-linkbutton" icon="icon-cross" title="删除" data-bind="click:deleteClick">删除</a>
                <a id="a_save" href="#" plain="true" class="easyui-linkbutton" icon="icon-save" data-bind="click:saveClick" title="保存">保存</a>
                <a id="a_save1" href="#" plain="true" class="easyui-linkbutton" icon="icon-node_tree" data-bind="click:typeClick" title="管理类别">管理类别</a>
            </div>

            <table id="gridlist" data-bind="treegrid:grid">
                 <thead>  
                    <tr>  
                        <th field="LinkCode"           sortable="true" align="left"    width="100"     editor="{type:'validatebox',options:{required:true}}">编号</th>
                        <th field="LinkName"           sortable="true" align="left"    width="100"     editor="{type:'validatebox',options:{required:true}}"  >名称   </th>  
                        <th field="LinkPic"           sortable="true" align="left"    width="160"     editor="{type:'lookup'}">图标</th>
                        <th field="LinkUrl"           sortable="true" align="left"    width="180"     editor="{type:'validatebox',options:{required:true}}"  >链接地址   </th>  
                        <th field="ParentLinkCode"     sortable="true" align="left"    width="100"     editor="combotree"   formatter="formatterParent">上级链接   </th> 
                        <th field="LinkRemark"         sortable="true" align="left"    width="180"     editor="text"  >描述说明   </th>  
                        <th field="IsVisible"            sortable="true" align="center"  width="60"      editor="{type:'checkbox',options:{on:true,off:false}}"      formatter="formatterEnable"  >是否显示   </th>  
                        <th field="IsEnable"            sortable="true" align="center"  width="60"      editor="{type:'checkbox',options:{on:true,off:false}}"      formatter="formatterEnable"  >是否启用   </th>  
                        <th field="LinkOrder"          sortable="true" align="right"   width="60"      editor="{type:'numberbox', options:{min:0}}">排序       </th>  
                    </tr>                            
                </thead>      
            </table> 
        </div>
    </div>
    <div id="navigation">
        <div title="链接类别" style="width: 180px;" class="easyui-panel" data-options="title: '链接类别', iconCls: 'icon-node_tree', height: $(window).height() - 4 ">
            <ul data-bind="easyuiTree:tree"></ul>
        </div>
    </div>
</div>
<script type="text/html" id="type-template">
    <style type="text/css">
        .datagrid-wrap{border-width:0 0 1px 0;}
        .datagrid-toolbar{background-color:#E0ECFF !important}
    </style>

    <table data-bind="treegrid:typeGrid">
        <thead>
            <th field="LinkCode"           sortable="true" align="left"    width="100"     editor="{type:'validatebox',options:{required:true}}">编号</th>
            <th field="LinkName"           sortable="true" align="left"    width="100"     editor="{type:'validatebox',options:{required:true}}"  >名称   </th>  
            <th field="LinkRemark"         sortable="true" align="left"    width="180"     editor="text"  >描述说明   </th>  
            <th field="IsVisible"            sortable="true" align="center"  width="70"      editor="{type:'checkbox',options:{on:true,off:false}}"      formatter="com.formatCheckbox">是否可见   </th>  
            <th field="IsEnable"            sortable="true" align="center"  width="70"      editor="{type:'checkbox',options:{on:true,off:false}}"      formatter="com.formatCheckbox">是否启用   </th>  
            <th field="LinkOrder"          sortable="true" align="right"   width="60"      editor="{type:'numberbox', options:{min:0}}">排序       </th>  
        </thead>
    </table>
    
    <div style="text-align:center;margin:5px;">
        <a class="easyui-linkbutton" data-options="iconCls:'icon-ok'" data-bind="click:confirmClick" href="javascript:void(0)"  >确定</a>  
        <a class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" data-bind="click:cancelClick" href="javascript:void(0)">取消</a> 
    </div>
</script> 
