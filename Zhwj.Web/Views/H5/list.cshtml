@{
    Layout = "~/Views/Shared/_LayoutH5.cshtml";
    ViewBag.Title = "法律咨询-阳光问法-河北新闻网";
    ViewBag.EasyuiVersion = "1.3.2";
    ViewBag.locale = "zh_CN";
    ViewBag.theme = "gray";
    ViewBag.Keywords = "阳光问法,河北法律,河北法律平台";
}

@section head{
    <script src="~/Content/js/jquery/jquery-1.8.1.min.js" type="text/javascript"></script>
    <!--加载脚本库-->
    @Scripts.Render("~/Content/js/library")
    <!--加载easyui加载器-->
    <script type="text/javascript" src="~/Content/js/jquery-easyui-@ViewBag.EasyuiVersion/easyloader.js?locale=@ViewBag.locale&theme=@ViewBag.theme"></script>
}

@section scripts{
    <script src="~/Content/js/viewModel/com.viewModel.razorList.js"></script>
    <script type="text/javascript">
        //设置列表、分页
        var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.page));
        var viewModel = function(){ 
            var self = this;
            com.viewModel.razorList.apply(this,arguments);
        };
        var easyLoaded = function () {
            //咨询列表
            viewModel = new viewModel(data);
            ko.applyBindings(viewModel, document.getElementById("zxlist"));
            $('#pp').pagination({
                showPageList:false,
                showRefresh:false,
                displayMsg:""
            });
        };
        using(['parser', 'pagination'], easyLoaded);
    </script>
}
<div data-am-widget="list_news" class="am-list-news am-list-news-default">
    <div>
        编号:<input type="text" size="10" data-bind="value:form.ac" style="border: 1px solid #ccc; color: #999;">
        <button type="button" data-bind="click:searchClick" class="am-btn am-btn-default am-round am-btn-xs">搜索</button>
        <button type="button" data-bind="click:clearClick" class="am-btn am-btn-default am-round am-btn-xs">清空</button>
    </div>
    <!--列表标题-->
    <div class="am-list-news-hd list-news-hd am-cf">
        <!--带更多链接-->
        <h2>咨询列表</h2>
        <span class="am-fr"></span>
    </div>

    <div class="am-list-news-bd">
        <ul class="am-list">
            @for (var i = 0; i < Model.rows.Count; i++)
            {
                <li class="am-g am-list-item-dated">
                    <a class="am-list-item-hd " href="/h5/show/@Model.rows[i].AdvisoryCode" title="@Model.rows[i].MsgTitle">@Model.rows[i].MsgTitle</a>
                    <span class="am-list-date">@Convert.ToDateTime(Model.rows[i].MsgInDate).ToString("yy-MM-dd")</span>
                </li>
            }
        </ul>
        <ul class="am-pagination blog-pagination">
            <li class="am-pagination-next">
                <div id="pp"></div>
            </li>
        </ul>
    </div>
</div>
